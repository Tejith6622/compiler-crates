use std::str::FromStr;

grammar;

// Simple calculator with built-in lexer
// Supports addition, subtraction, multiplication, division, and parentheses

pub Expr: i32 = {
    <l:Expr> "+" <r:Factor> => l + r,
    <l:Expr> "-" <r:Factor> => l - r,
    Factor,
};

Factor: i32 = {
    <l:Factor> "*" <r:Term> => l * r,
    <l:Factor> "/" <r:Term> => l / r,
    Term,
};

Term: i32 = {
    Number,
    "(" <Expr> ")",
};

Number: i32 = {
    r"[0-9]+" => i32::from_str(<>).unwrap(),
};